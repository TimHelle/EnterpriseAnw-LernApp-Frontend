<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="Username:"/>
                <Entry x:Name="entryUsername" Placeholder="Enter username"></Entry>
                <Label Text="Password:"/>
                <Entry x:Name="entryPassword" Placeholder="Enter Passwordname"></Entry>
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Button x:Name="buttonExplanation"
                        Text="Login"
                        WidthRequest="100"
                        HeightRequest="50"
                        Clicked="CheckLogin">
                    </Button>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>